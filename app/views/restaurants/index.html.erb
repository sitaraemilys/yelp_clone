<% if @restaurants.any? %>
	<% @restaurants.each do |restaurant| %>
		<h2> <%= link_to restaurant.name, restaurant_path(restaurant) %> </h2>
		<h2> <%= restaurant.description %> </h2>

		<% if current_user %>
			<% if current_user.id == @restaurants.find(restaurant.id).user_id %>
			<%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %>
			<% end %>
		<% end %>

		<% if current_user %>
			<% unless current_user.has_reviewed?(restaurant) %>
				<p> <%= link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant) %> </p>
			<% end %>
		<% end %>

		<% restaurant.reviews.each do |review| %>
			<p> <%= review.rating %> </p>
			<p> <%= review.thoughts %> </p>
		<% end %>

		<% if current_user %>
			<% if current_user.id == @restaurants.find(restaurant.id).user_id %>
		<p> <%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete %></p>
			<% end %>
		<% end %>

	<% end %>

<% else %>
	<h1>No restaurants yet</h1>
<% end %>
<br>

<a href='/restaurants/new'>Add a restaurant</a>
